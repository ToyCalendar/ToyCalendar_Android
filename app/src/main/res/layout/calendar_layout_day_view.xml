<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:minHeight="@dimen/calendar_day_height"
    android:orientation="vertical">
    <!-- android:background="?android:attr/selectableItemBackground" setOnclickListener와 함꼐 ripple울 보여주고싶을 떄넣어주자 -->

    <TextView
        android:id="@+id/day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="@dimen/calendar_day_text"
        tools:text="35" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heart"
            android:layout_width="7dp"
            android:layout_height="6dp"
            android:src="@drawable/heart"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/black_dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/black_dot"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>